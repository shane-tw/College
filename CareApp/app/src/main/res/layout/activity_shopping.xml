<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/list_item_horizontal"
            android:paddingRight="@dimen/list_item_horizontal"
            android:paddingTop="@dimen/list_item_vertical"
            android:paddingBottom="@dimen/list_item_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size"
            android:onClick="onGroceriesClicked"
            android:text="Groceries"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/preference_list_divider_material"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/list_item_horizontal"
            android:paddingRight="@dimen/list_item_horizontal"
            android:paddingTop="@dimen/list_item_vertical"
            android:paddingBottom="@dimen/list_item_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size"
            android:onClick="onElectronicsClicked"
            android:text="Electronics"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/preference_list_divider_material"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/list_item_horizontal"
            android:paddingRight="@dimen/list_item_horizontal"
            android:paddingTop="@dimen/list_item_vertical"
            android:paddingBottom="@dimen/list_item_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size"
            android:onClick="onFashionClicked"
            android:text="Fashion"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/preference_list_divider_material"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/list_item_horizontal"
            android:paddingRight="@dimen/list_item_horizontal"
            android:paddingTop="@dimen/list_item_vertical"
            android:paddingBottom="@dimen/list_item_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size"
            android:onClick="onHomewareClicked"
            android:text="Homeware"/>
    </LinearLayout>
</ScrollView>
